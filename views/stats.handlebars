<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Thống kê URL</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>URL gốc:</strong>
                    <a href="{{url.original_url}}" target="_blank">{{url.original_url}}</a>
                </div>
                <div class="mb-3">
                    <strong>URL ngắn:</strong>
                    <a href="/{{url.short_code}}" target="_blank">{{../baseUrl}}/{{url.short_code}}</a>
                </div>
                <div class="mb-3">
                    <strong>Số lần click:</strong>
                    <span class="badge bg-primary">{{url.clicks}}</span>
                </div>
                <div class="mb-3">
                    <strong>Ngày tạo:</strong>
                    <span>{{url.created_at}}</span>
                </div>
            </div>
        </div>
    </div>
</div> 